<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_level2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_level2">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

       <my.awesome.lavanya.celebrityquiz.SingleShotImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:background="@drawable/image_border"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:id="@+id/imageView"
            android:scaleType="fitCenter" />
        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:tag="0"
            android:id="@+id/button"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button_corners" />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:tag="1"
            android:id="@+id/button2"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button_corners" />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:tag="2"
            android:id="@+id/button3"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button_corners"/>

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:tag="3"
            android:id="@+id/button4"
            android:background="@drawable/button_corners"/>
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="275dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="275dp"
        android:id="@+id/playagainlayout"
        android:background="@color/colorAccent"
        android:visibility="invisible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Score"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:id="@+id/winnermsg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="answered 9/10"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:textSize="25sp"
            android:id="@+id/questionsans"/>

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/playagain"
            android:text=""
            android:layout_marginTop="20dp"
            android:background="@drawable/play_corners"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:onClick="playagain"/>
    </LinearLayout>
</RelativeLayout>
